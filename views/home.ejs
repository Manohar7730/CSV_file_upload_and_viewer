<html lang="en">

<head>
    <!-- Meta tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Font Awesome library -->
    <script src="https://kit.fontawesome.com/d2d263dc81.js" crossorigin="anonymous"></script>

    <!-- CSS file -->
    <link rel="stylesheet" href="/css/home.css">

    <!-- Page title -->
    <title>
        <%= title %>
    </title>
</head>

<body>
    <section>
        <!-- Main container -->
        <div class="main">
            <!-- File uploader -->
            <div id="file_uploader">
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <!-- File input field -->
                    <label for="csv" id="csv-label">Choose</label>
                    <input type="file" name="file" id="csv" hidden onchange="updateFileName()">
                    <!-- Upload button -->
                    <input type="submit" value="upload" class="upload_button">
                </form>
            </div>
            <!-- Search container -->
            <div id="search-container">
                <!-- Search input field -->
                <input type="text" id="search-input" placeholder="Search file name">
            </div>
        </div>
        <!-- File viewer -->
        <div class="file_viewer">
            <%if(csvFiles.length>0){%>
                <%for(file of csvFiles){%>
                    <!-- Individual file card -->
                    <div class="card">
                        <!-- File name -->
                        <small class="file-name">
                            <%= file.original_name %>
                        </small>
                        <!-- Delete file link -->
                        <a href="/delete/<%=file._id%>"><i class="fa-solid fa-trash"></i></a>
                        <!-- Render file link -->
                        <a href="/render/<%=file._id%>"><i class="fa-solid fa-eye"></i></a>
                    </div>
                    <%}%>
                        <%}else{%>
                            <!-- Message for no files available -->
                            <p>NO CSV FILES ARE AVAILABLE</p>
                            <%}%>
        </div>
    </section>
    <!-- JavaScript file -->
    <script src="/js/home.js"></script>>
</body>

</html>