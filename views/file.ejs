<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/file.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <h1>File Name :- <%= file.original_name %>
    </h1>
    <!-- CSV file content section -->
    <h2>CSV File Content</h2>
    <!-- Search container -->
    <div class="search-container">
        <!-- Search input field -->
        <input type="text" id="searchInput" placeholder="Search...">
    </div>
    <!-- Data table -->
    <table id="dataTable">
        <!-- Table headers -->
        <thead>
            <tr>
                <!-- Conditional rendering of table headers -->
                <% if (data.length> 0) { %>
                    <% const headers=Object.keys(data[0]); %>
                        <% headers.forEach((header)=> { %>
                            <!-- Table header cell -->
                            <th>
                                <div class="column-header">
                                    <span>
                                        <%= header %>
                                    </span>
                                </div>
                            </th>
                            <% }); %>
                                <% } %>
            </tr>
        </thead>
        <!-- Table body -->
        <tbody>
            <% data.forEach((row)=> { %>
                <tr>
                    <% Object.values(row).forEach((value)=> { %>
                        <td>
                            <%= value %>
                        </td>
                        <% }); %>
                </tr>
                <% }); %>
        </tbody>
    </table>
    <!-- Pagination -->
    <div id="pagination">
        <% if (currentPage> 1) { %>
            <a href="/render/<%= file._id %>?page=<%= currentPage - 1 %>">Previous</a>
            <% } %>

                <% if (currentPage> 5) { %>
                    <span class="page-number">...</span>
                    <% } %>

                        <% for (let i=startPage; i <=endPage; i++) { %>
                            <% if (i===currentPage) { %>
                                <span class="current-page">
                                    <%= i %>
                                </span>
                                <% } else { %>
                                    <a href="/render/<%= file._id %>?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                    <% } %>
                                        <% } %>

                                            <% if (endPage < totalPages - 4) { %>
                                                <span class="page-number">...</span>
                                                <% } %>

                                                    <% if (currentPage < totalPages) { %>
                                                        <a
                                                            href="/render/<%= file._id %>?page=<%= currentPage + 1 %>">Next</a>
                                                        <% } %>
    </div>
    <script src="/js/file.js"></script>
</body>

</html>